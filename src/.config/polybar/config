; Polybar Subconfig for laptop
; @author Rik Brugman

; Local settings for specific setup
; Will be used in the global bar config file
[local-settings]
eth-interface = enp4s0
wlan-interface = wlp3s0
battery-id = BAT0
adapter-id = AC

; Include main config
include-file = /home/rik/.config/polybar/globalConfig

; Main bar
[bar/main]
inherit = global/barconfig
monitor = ${env:MONITOR_PRIMARY:LVDS-1-1}
modules-right = player-status backlight-acpi battery volume eth wlan date
tray-position = right

; Secondary bar
[bar/secondary]
inherit = global/barconfig
monitor = ${env:MONITOR_SECONDARY:}
