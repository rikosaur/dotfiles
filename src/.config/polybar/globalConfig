; Global Polybar Configuration
; @author Rik Brugman

[colors]
background      = #00000000
background-alt  = #0D3E58
foreground      = #c1c1c1
foreground-alt  = #ff808080
primary         = #ffffff
secondary       = #00ff00
success         = #00ae14
warning         = #a0ae00
alert           = #ca3f3f
info            = #0776aa


; ------------------------
;  Overall Settings
; ------------------------

[global/barconfig]
enable-ipc    = true
width         = 100%
height        = 35
offset-x      = 0
offset-y      = 0
radius        = 0
fixed-center  = false
background = ${colors.background}
foreground = ${colors.foreground}
padding-left = 4
padding-right = 8
module-margin-left = 4
module-margin-right = 3
font-0 = Asap SemiBold:style=Regular:size=10;2
font-1 = FontAwesome:style=Regular:size=10;2
font-2 = Font Awesome 5 Brands:style=Regular:size=10;2
font-3 = Font Awesome 5 Free:style=Solid:size=10;2
font-4 = Material Design Icons:style=Regular:size=12;2
font-5 = Asap:style=Bold:size=10;2
modules-left = i3 filesystem memory cpu docker-status
modules-center = xwindow
modules-right =  volume audio-source-indicator eth date
tray-offset-x = -10
tray-transparent = false
tray-background = ${colors.background}
line-size = 2


; ------------------------
;  Module Configuration
; ------------------------

[module/xwindow]
type = internal/xwindow
label = %title:0:100:...%

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
label-mounted = %{F#808080}%{F-}  %used% / %total%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
enable-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

; default paddings
label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
;label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.foreground}
label-focused-underline = ${colors.foreground}
label-focused-padding = 4

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-foreground = ${colors.foreground-alt}
label-unfocused-padding = 4

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-foreground = ${colors.foreground-alt}
; ${colors.foreground}
; label-visible-background = #50cccccc
label-visible-underline = ${colors.foreground-alt}
label-visible-padding = 4

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-foreground = ${colors.alert}
label-urgent-underline = ${colors.alert}
label-urgent-padding = 4

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.foreground-alt}
format = <label>  <ramp-load>
label = %percentage%%
ramp-load-0 =
ramp-load-1 =
ramp-load-2 =
ramp-load-3 =
ramp-load-4 =
ramp-load-5 =
ramp-load-6 = 
ramp-load-6-foreground = ${colors.warning}
ramp-load-7 = 
ramp-load-7-foreground = ${colors.alert}

[module/eth]
type = internal/network
interface = ${local-settings.eth-interface}
interval = 3.0
;format-connected-prefix = "  "
format-connected-foreground = ${colors.foreground-alt}
label-connected = 
format-disconnected-prefix = "  "
format-disconnected-prefix-foreground = ${colors.foreground}
format-disconnected =

[module/wlan]
type = internal/network
interface = ${local-settings.wlan-interface}
interval = 3.0
format-connected = <ramp-signal>  <label-connected>
format-connected
label-connected = %essid%
label-disconnected = no wifi
format-disconnected = 來  <label-disconnected>
ramp-signal-foreground = ${colors.foreground-alt}
ramp-signal-0 = 冷
ramp-signal-1 = 爛
ramp-signal-2 = 嵐
ramp-signal-3 = 襤
ramp-signal-4 = 蠟

[module/memory]
type = internal/memory
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage_used%%

[module/battery]
type = internal/battery
battery = ${local-settings.battery-id}
adapter = ${local-settings.adapter-id}
full-at = 98
format-full =   100%
format-charging =   <label-charging>
format-discharging = <ramp-capacity>   <label-discharging>
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-0-foreground = ${colors.alert}
ramp-capacity-1-foreground = ${colors.warning}
ramp-capacity-2-foreground = ${colors.foreground-alt}
ramp-capacity-3-foreground = ${colors.foreground-alt}
ramp-capacity-4-foreground = ${colors.foreground-alt}

[module/xbacklight]
type = internal/xbacklight
format =   <label>
label = %percentage%%

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/date]
type = internal/date
interval = 5
label = %{T6}%date% %time%%{T-}
date =
date-alt = " %Y-%m-%d"
time = %H:%M
time-alt = %H:%M:%S

[module/volume]
type = internal/pulseaudio
use-ui-max = true
interval = 1
format-volume = %{F#808080}<ramp-volume>%{F-}  <label-volume>
label-muted =  muted
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/audio-source-indicator]
type = custom/script
exec = ~/bin/audioctl get-device-indicator
interval = 1
label =  %{T5}%output%%{T-}

[module/docker-status]
type = custom/script
exec = ~/bin/docker-status
interval = 2
label = %{F#808080}%{F-}  %output%

[module/player-status]
type = custom/script
exec = ~/bin/player-status
interval = 1
label = %output:0:35:...%
