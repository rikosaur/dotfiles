#!/bin/bash

# Startup Commands
# Rik Brugman 2017

# VGA/Graphics
xrandr --output HDMI-3 --primary --auto --output HDMI-4 --auto --right-of HDMI-3
feh --bg-scale 'pictures/background.jpg'

# Keyboard
xbindkeys &

# append home to path
PATH=$PATH:$HOME/bin

# USB automount software
udiskie --try -aF &

# Polybar instances
DISPLAY=:0 MONITOR_PRIMARY=HDMI-3 /usr/bin/polybar main &
DISPLAY=:0 MONITOR_SECONDARY=HDMI-4 /usr/bin/polybar secondary &

# Others
dunst &
dropbox &
